<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mohamedhedhili.multipletablesqlliteandroid.EspaceAdmin">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Espace Admin"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:textSize="20sp"
            />
    <ToggleButton
        android:id="@+id/btn_categorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Categorie"
        android:background="@drawable/stylebutton"
        android:textColor="#ffffff"
        android:textOff="Categorie "
        android:textOn="Categorie"
       />

        <ToggleButton
            android:id="@+id/btn_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"

            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Question"
            android:background="@drawable/stylebutton"
            android:textColor="#ffffff"
            android:textOff="Question"
            android:textOn="Question"
            />

    </LinearLayout>

</RelativeLayout>
